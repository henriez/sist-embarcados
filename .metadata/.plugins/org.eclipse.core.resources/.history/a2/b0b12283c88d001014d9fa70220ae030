/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;

SPI_HandleTypeDef hspi2;

TIM_HandleTypeDef htim3;

/* USER CODE BEGIN PV */
int16_t x_raw, y_raw, z_raw;
char display_buffer[50];
/* USER CODE END PV */

